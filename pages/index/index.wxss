/**index.wxss**/
.container{
    padding: 0;
    color: #aaaaaa;
}
.base_square_1 {
    width: 90rpx;
    height: 200rpx;
    background-color:#fce4ec;
    padding:20rpx 8rpx;
}
.base_square_2{
    width: 90rpx;
    height: 300rpx;
    background-color:#b2dfdb;
    padding: 80rpx 8rpx;
}
.nav_bar{
    height: 100rpx;
    width: 100%;
    box-shadow:0 10rpx 8rpx rgba(235,235,235,0.5) inset;
    display: flex;
    align-items: flex-end;
    font-size: 32rpx;
    text-align: center;
    font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    padding-bottom: 12rpx;
   
}
.nav_bar_week{
    font-size: 40rpx;
    font-weight: bold;
    margin:20rpx 38rpx;
    padding-top: 10rpx;
}
.nav_bar_item{
    width:90rpx;
    margin-right: 2rpx;
}
.active{
    background-color: rgb(235,235,235) !important;
    border-radius: 20rpx;
    color: snow;

}
.view_content{
    width: 100%;
    height:1200rpx;
    display: flex;
    align-items: flex-start;
    box-shadow:0 10rpx 10rpx  rgba(235,235,235,0.4) inset;
}
.left_list{
    z-index: -2;
}
.left_list view{
    width: 100rpx;
    height: 100rpx;
    background-color: #f5f5f5;
    text-align: center;
    line-height: 90rpx;
    font-family: 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}
.right_course{
    width: 100%;
    height: 100%;
    background-color:#e0f7fa;
    z-index: -1;
    display: flex;
    align-items: flex-start;
    color:snow;
}
.right_course view{
    box-sizing:border-box;
    font-size:24rpx;
    text-align:center;
    
}
.Monday,.Tuesday,.Wednesday,.Thursday,.Friday,.Saturday,.Sunday{
    margin-right: 2rpx;
  
}
.place{
    font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif;
}
view.null_1{
    width:90rpx;
    height:100rpx;
}
view.null_2{
    width:90rpx;
    height: 200rpx;
}
view.null_5{
    width:90rpx;
    height:500rpx;
}
